{
  "name": "p5-browserify",
  "version": "1.0.0",
  "description": "Example of how to run P5 (Ex - ProcessingJS) with ES6 in Browserify",
  "private": true,
  "scripts": {
    "watchify": "watchify --debug src/main.js -o dist/build.js -v",
    "serve": "http-server -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "browserify -g [ css-extract -o ./dist/style.css ] -e ./src/main.js | uglifyjs -c warnings=false -m > ./dist/build.js"
  },
  "browserify": {
    "transform": [
      [
        "scssify",
        {
          "sass": {
            "outputStyle": "compressed",
            "includePaths": [
              "node_modules"
            ]
          }
        }
      ],
      "babelify"
    ]
  },
  "keywords": [
    "p5",
    "processing",
    "javascript",
    "es6",
    "browserify",
    "sass"
  ],
  "author": "Adrian von Gegerfelt (adrian@designbyadrian.com)",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.26.0",
    "babelify": "^7.3.0",
    "browserify-livereload": "^1.0.10",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.10.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "scssify": "^2.3.0",
    "uglify-js": "^3.1.3",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "p5": "^0.5.14"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb/base",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-console": 0,
      "no-multi-assign": 0,
      "no-plusplus": 0,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "class-methods-use-this": 0,
      "require-yield": 0
    }
  }
}
